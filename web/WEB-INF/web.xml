<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>TrackingController</servlet-name>
        <servlet-class>com.controller.TrackingController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>regController</servlet-name>
        <servlet-class>com.controller.regController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>itemController</servlet-name>
        <servlet-class>com.controller.itemController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TrackingController</servlet-name>
        <url-pattern>/TrackingController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>regController</servlet-name>
        <url-pattern>/regController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>itemController</servlet-name>
        <url-pattern>/itemController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
